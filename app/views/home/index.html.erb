<% if user_signed_in? %>
  <p class="text-lg mb-4">
    こんにちは、<span class="font-semibold"><%= current_user.email %></span> さん！
  </p>

  <div class="flex flex-col space-y-3 items-center">
    <%= link_to "＋ リポジトリを登録する", new_repository_path,
      class: "w-full text-center px-6 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg shadow transition" %>

    <%= button_to "ログアウト", destroy_user_session_path, method: :delete,
      class: "w-full text-center px-6 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow transition" %>
  </div>

<% else %>
  <div class="flex flex-col md:flex-row justify-center items-center space-y-2 md:space-y-0 md:space-x-4 w-full">
    <%= link_to "ログイン", new_user_session_path,
      class: "w-full md:w-auto text-center px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow transition" %>

    <%= link_to "新規登録", new_user_registration_path,
      class: "w-full md:w-auto text-center px-6 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg shadow transition" %>
  </div>
<% end %>
