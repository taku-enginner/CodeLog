<!-- app/views/repositories/index.html.erb -->

<h2 class="text-2xl font-bold mb-6">登録済みリポジトリ一覧</h2>

<% if @repositories.any? %>
  <ul class="space-y-4">
    <% @repositories.each do |repo| %>
      <li class="p-4 bg-white shadow rounded border">
        <h3 class="text-xl font-semibold"><%= link_to repo.full_name, repository_path(repo), class: "text-blue-600 hover:underline" %></h3>
        <p class="text-gray-600 text-sm">登録日: <%= repo.created_at.strftime("%Y-%m-%d %H:%M") %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-600">まだリポジトリが登録されていません。</p>
<% end %>
