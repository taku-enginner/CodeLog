<%= form_with model: annotation, url: annotations_path, data: { turbo_frame: "line_#{annotation.line_number}" } do |f| %>
  <%= f.hidden_field :repository_id %>
  <%= f.hidden_field :file_path %>
  <%= f.hidden_field :line_number %>

  <div class="mt-1 flex gap-2">
    <%= f.text_field :content, placeholder: "この行へのコメント", class: "flex-1 border px-2 py-1 rounded text-sm" %>
    <%= f.submit "保存", class: "text-sm bg-blue-500 text-white px-3 py-1 rounded" %>
  </div>
<% end %>
